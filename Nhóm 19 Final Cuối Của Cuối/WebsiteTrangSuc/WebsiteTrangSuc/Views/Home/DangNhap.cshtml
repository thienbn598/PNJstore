
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    if (Session["ms"] != null)
    {
        <div class="alert alert-warning" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign">
                @Session["ms"].ToString()
            </span>

        </div>
    }
}
@using (Html.BeginForm("DangNhap", "Home", FormMethod.Post))
{
    <div class="panel panel-default">
        <div class="panel-heading"><h4 style="text-align:center">Đăng nhập hệ thống</h4></div>
        <div class="panel-body">
            <div class="LoginLayout">
                <div class="row">
                    <div class="col-md-offset-2 col-md-8" style="padding-top:30px">
                        <div class="input-group">
                            <span class="input-group-btn glyphicon glyphicon-user">
                            </span>
                            @Html.TextBox("txtTen", null, new { @class = "form-control", placeholder = "Tên đăng nhập" })
                        </div><!-- /input-group -->
                    </div><!-- /.col-lg-6 -->
                </div>
                <div class="row">
                    <div class="col-md-offset-2 col-md-8">
                        <div class="input-group">
                            <span class="input-group-btn glyphicon glyphicon-lock">

                            </span>
                            @Html.Password("txtMatKhau", null, new { @class = "form-control", placeholder = "Mật khẩu" })
                        </div><!-- /input-group -->
                    </div><!-- /.col-lg-6 -->
                </div>
                <div class="row">
                    <div class="col-md-offset-5 col-md-8">
                        <div class="input-group" style="padding-top:10px">
                            <input type="submit" value="Đăng nhập" class="btn btn-primary" />
                           
                                @Html.ActionLink("Chưa có tài khoản", "DangKy", "Home")
                     

                        </div><!-- /input-group -->
                  
                    </div><!-- /.col-lg-6 -->
                </div>
            </div>
        </div>
    </div>

}

