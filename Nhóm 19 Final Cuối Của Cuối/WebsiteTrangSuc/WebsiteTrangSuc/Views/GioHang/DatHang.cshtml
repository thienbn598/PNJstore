@using WebsiteTrangSuc.Models
@{
    ViewBag.Title = "DatHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("DatHang", "GioHang", FormMethod.Post))
{
    <div class="progress_tab">
        <div class="_progress-bar">
            <ul class="step-breadcrumb _list">
                <li class="step-breadcrumb _item ">
                    <span class="step-breadcrumb _text">1. Đăng nhập</span>
                </li>
                <li class="step-breadcrumb _item ">
                    <span class="step-breadcrumb _text">2. Địa chỉ</span>
                </li>
                <li class="step-breadcrumb _item -current">
                    <span class="step-breadcrumb _text">3. Thanh Toán</span>
                </li>
            </ul>
        </div>
    </div>

    <div class="col-sm-4 col-md-6" style="padding-top:30px">
        <div>
            <div class="panel panel-default">
                <div class="panel-heading">Hình thức thanh toán</div>
                <div class="panel-body">
                    <div class="form-inline">
                        <div class="form-group">
                            <label for="option1">Thanh toán trực tiếp</label>
                            <input type="radio" class="form-control" name="rdphuongthuctt" id="rdphuongthuctt" value="Thanh toán trực tiếp">
                        </div>
                        <div class="form-group">
                            <label for="option2">Thanh toán bằng chuyển khoản</label>
                            <input type="radio" class="form-control" name="rdphuongthuctt" id="rdphuongthuctt" value="Thanh toán bằng chuyển khoản">
                        </div>
                        <div class="form-group">
                            <label for="option3">Thanh toán bằng thẻ Master card</label>
                            <input type="radio" class="form-control" name="rdphuongthuctt" id="rdphuongthuctt" value="Thanh toán bằng thẻ Master card">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-offset-5 col-md-8">
                            <div class="input-group" style="padding-top:10px">
                                <input type="submit" value="Đặt hàng" class="btn btn-primary" />
                            </div><!-- /input-group -->
                        </div><!-- /.col-lg-6 -->
                    </div>
                </div>
            </div>

        </div>

    </div>
    <div class="col-sm-4 col-md-6" style="padding-top:30px">
        <div>
            <div class="panel panel-default">
                <div class="panel-heading">Thông tin người đặt</div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-offset-2 col-md-8" style="margin-left:2px">
                            <div class="input-group">
                                <b>-Tên người đặt:</b>
                            <label  >@ViewBag.kh.Tenkhachhang</label>
                            </div><!-- /input-group -->
                        </div><!-- /.col-lg-6 -->
                    </div>
                    <div class="row">
                        <div class="col-md-offset-2 col-md-8" style="margin-left:2px">
                            <div class="input-group">
                                <b>- Địa chỉ người đặt:</b>
                                <label >@ViewBag.kh.Diachi</label>
                            </div><!-- /input-group -->
                        </div><!-- /.col-lg-6 -->
                    </div>
                    <div class="row">
                        <div class="col-md-offset-2 col-md-8" style="margin-left:2px">
                            <div class="input-group">
                                <b>- Điện thoại:</b>
                                <label>@ViewBag.kh.Dienthoai</label>
                            </div><!-- /input-group -->
                        </div><!-- /.col-lg-6 -->
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="col-sm-4 col-md-6" style="padding-top:30px">
        <div>
            <div class="panel panel-default">
                <div class="panel-heading">Thông tin người nhận</div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-offset-2 col-md-8" style="margin-left:2px">
                            <div class="input-group">
                                <b>-Tên người nhận:</b>
                                <label >@ViewBag.dh.Tennguoinhan</label>
                            </div><!-- /input-group -->
                        </div><!-- /.col-lg-6 -->
                    </div>
                    <div class="row">
                        <div class="col-md-offset-2 col-md-8" style="margin-left:2px">
                            <div class="input-group">
                                <b>- Địa chỉ người nhận:</b>
                                <label>@ViewBag.dh.Diachinguoinhan</label>
                            </div><!-- /input-group -->
                        </div><!-- /.col-lg-6 -->
                    </div>
                    <div class="row">
                        <div class="col-md-offset-2 col-md-8" style="margin-left:2px">
                            <div class="input-group">
                                <b>- Điện thoại:</b>
                                <label >@ViewBag.dh.DTnguoinhan</label>
                            </div><!-- /input-group -->
                        </div><!-- /.col-lg-6 -->
                    </div>
                    <div class="row">
                        <div class="col-md-offset-2 col-md-8" style="margin-left:2px">
                            <div class="input-group">
                                <b>- Yêu cầu:</b>
                                <label >@ViewBag.dh.Yeucau</label>
                            </div><!-- /input-group -->
                        </div><!-- /.col-lg-6 -->
                    </div>
                    <div class="row">
                        <div class="col-md-offset-2 col-md-8" style="margin-left:2px">
                            <div class="input-group">
                                <b>- Ngày giao hàng:</b>
                                <label>@ViewBag.dh.Ngaygiao</label>
                            </div><!-- /input-group -->
                        </div><!-- /.col-lg-6 -->
                    </div>

                </div>
            </div>
        </div>

    </div>
    <div class="col-sm-4 col-md-6" style="float:right">
        <div class="panel panel-default">
            <div class="panel-heading">Thông tin giỏ hàng</div>
            <div class="panel-body">
                <table class="table">
                    <thead>
                        <tr>
                           
                            <td>Tên sản phẩm</td>
                            <td>Số lượng</td>
                            <td>Đơn giá</td>
                            <td>Thành Tiền</td>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            if (ViewBag.gh != null)
                            {
                                var tongtien = 0.0;
                                var thanhtien = 0;
                                foreach (var item in ViewBag.gh)
                                {
                                    thanhtien = (int)item.SoLuong * (int)item.Sanpham.GiaMoi;
                                    <tr>
                                        
                                        <td>@item.Sanpham.Ten</td>
                                        <td>
                                            <label class="txtSoLuong">@item.SoLuong</label>

                                        </td>
                                        <td>
                                            <label class="txtDonGia">@item.Sanpham.GiaMoi</label>
                                        </td>
                                        <td>
                                            <label class="ThanhTien" id="thanhtien">@thanhtien</label>
                                        </td>
                                    </tr>
                                    tongtien = tongtien + thanhtien;
                                }
                                <tr>
                                    <td></td>
                                    <td></td>
                                   
                                    <td>
                                        Tổng tiền:
                                    </td>
                                    <td> @tongtien</td>
                                </tr>
                            }

                        }
                    </tbody>

                </table>
                </div>
</div>
            </div>
            }

