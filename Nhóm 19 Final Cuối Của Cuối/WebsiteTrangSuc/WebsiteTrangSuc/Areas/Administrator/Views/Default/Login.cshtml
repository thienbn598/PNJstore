
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/AdminSite.css" rel="stylesheet" />
</head>
<body>
@using (Html.BeginForm("Login","Default", FormMethod.Post))
 {
    <div class="LoginLayout">
        <div class="row">
            <div class="col-md-offset-2 col-md-8" style="padding-top:30px">
                <div class="input-group">
                    <span class="input-group-btn glyphicon glyphicon-user">
                    </span>
                    @Html.TextBox("txtTen", null, new { @class = "form-control", placeholder = "Tên đăng nhập" })
                </div><!-- /input-group -->
            </div><!-- /.col-lg-6 -->
        </div>
        <div class="row">
            <div class="col-md-offset-2 col-md-8">
                <div class="input-group">
                    <span class="input-group-btn glyphicon glyphicon-lock">

                    </span>
                    @Html.Password("txtMatKhau", null, new { @class = "form-control", placeholder = "Mật khẩu" })
                </div><!-- /input-group -->
            </div><!-- /.col-lg-6 -->
        </div>
        <div class="row">
            <div class="col-md-offset-5 col-md-8">
                <div class="input-group" style="padding-top:10px">
                    <input type="submit" value="Đăng nhập" class="btn btn-primary" />
                </div><!-- /input-group -->
            </div><!-- /.col-lg-6 -->
        </div>
    </div>
  }
</body>
</html>
